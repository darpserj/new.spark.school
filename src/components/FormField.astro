---
import Input from "./Input.astro";
const { formType, labelName, selectOptions } = Astro.props;
---

{
  (() => {
    switch (formType) {
      case "text":
        return (
          <div class="flex flex-col w-full">
            <label for="">{labelName}</label>
            <Input formType={formType} />
          </div>
        );
      case "email":
        return (
          <div class="flex flex-col w-full">
            <label for="">{labelName}</label>
            <Input formType={formType} />
          </div>
        );
      case "select":
        return (
          <div class="flex flex-col w-full">
            <label for="">{labelName}</label>
            <Input formType={formType} selectOptions={selectOptions} />
          </div>
        );
      case "textarea":
        return (
          <div class="flex flex-col w-full">
            <label for="">{labelName}</label>
            <Input formType={formType} />
          </div>
        );
      case "checkbox":
        return (
          <div class="flex w-full flex-row-reverse items-start gap-4">
            <label for="" class="md:mr-auto">
              {labelName}
            </label>
            <Input formType={formType} />
          </div>
        );

      default:
        return null;
    }
  })()
}
